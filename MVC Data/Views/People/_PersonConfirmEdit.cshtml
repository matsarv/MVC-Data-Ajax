@model Person

<div class="row partial" id="@("row-" + Model.Id)">
    <div class="col-3"><input id="@("name-" + Model.Id)" type="text" name="name" value="@Model.Name" /></div>
    <div class="col-3"><input id="@("phone-" + Model.Id)" type="number" min="0" name="phone" value="@Model.Phone" /></div>
    <div class="col-3"><input id="@("city-" + Model.Id)" type="text" name="city" value="@Model.City" /></div>
    <div class="col-3">
        <button class="btn btn-sm btn-success"
                onclick="ConfirmEditListItem('@("row-" + Model.Id)','@Url.Action("ConfirmEdit", "People", new { id = Model.Id})','@(Model.Id)')">
            Confirm
        </button>
        <button class="btn btn-sm btn-primary"
                onclick="ConfirmCancelListItem('@("row-" + Model.Id)','@Url.Action("ConfirmCancel", "People", new { id = Model.Id })', '@Model.Id')">
            Cancel
        </button>

    </div>
</div>





